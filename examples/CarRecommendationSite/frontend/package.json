{
  "name": "faciliauto-frontend",
  "version": "1.0.0",
  "description": "FacilIAuto - Sistema Inteligente de Recomendação de Carros",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run --reporter=verbose --coverage",
    "test:component": "cypress run --component",
    "test:watch": "vitest --watch",
    "test:coverage-check": "vitest run --coverage && node scripts/check-coverage.js",
    
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:headed": "cypress run --headed",
    "e2e:ci": "cypress run --record --parallel",
    "e2e:smoke": "cypress run --spec 'cypress/e2e/smoke/**/*.cy.ts'",
    "e2e:regression": "cypress run --spec 'cypress/e2e/regression/**/*.cy.ts'",
    
    "cypress:install": "cypress install",
    "cypress:verify": "cypress verify",
    
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    
    "pre-commit": "npm run lint && npm run type-check && npm run test:unit",
    "ci": "npm run pre-commit && npm run build && npm run e2e:ci"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "@chakra-ui/react": "^2.7.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.1",
    "zustand": "^4.4.1",
    "axios": "^1.5.0",
    "react-hook-form": "^7.45.4",
    "@hookform/resolvers": "^3.3.1",
    "zod": "^3.22.2",
    "react-query": "^3.39.3",
    "recharts": "^2.8.0",
    "react-slider": "^2.0.6",
    "react-select": "^5.7.4",
    "react-icons": "^4.10.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/user-event": "^14.4.3",
    "jsdom": "^22.1.0",
    
    "cypress": "^13.6.0",
    "@cypress/code-coverage": "^3.12.8",
    "cypress-real-events": "^1.11.0",
    "cypress-axe": "^1.5.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-drag-drop": "^1.1.1",
    "cypress-wait-until": "^3.0.1",
    "mongodb-memory-server": "^9.1.1",
    "ioredis-mock": "^8.9.0"
  }
}
