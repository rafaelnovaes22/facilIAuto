# WhatsApp Business API Configuration
# Obtenha estas credenciais em: https://developers.facebook.com/

# Token de acesso permanente (obrigatório)
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token_here

# ID do número de telefone do WhatsApp Business
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# ID da conta comercial do WhatsApp
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# Chave secreta do app (para validar webhooks)
WHATSAPP_APP_SECRET=your_app_secret_here

# Token de verificação do webhook (você define este valor)
WEBHOOK_VERIFY_TOKEN=faciliauto_webhook_2024_secure_token

# URL pública do webhook (HTTPS obrigatório)
WEBHOOK_URL=https://your-domain.com/webhook/whatsapp

# Configurações da API
WHATSAPP_API_VERSION=v18.0
WHATSAPP_API_BASE_URL=https://graph.facebook.com

# Rate Limiting
WHATSAPP_RATE_LIMIT_PER_SECOND=80
WHATSAPP_RATE_LIMIT_PER_MINUTE=1000

# Retry Configuration
WHATSAPP_MAX_RETRIES=3
WHATSAPP_RETRY_BACKOFF_FACTOR=2
WHATSAPP_RETRY_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/whatsapp.log

# Redis Configuration (para cache e rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=faciliauto_chatbot
POSTGRES_USER=faciliauto
POSTGRES_PASSWORD=your_secure_password_here

# DuckDB Configuration
DUCKDB_PATH=data/chatbot_context.duckdb

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Backend API Configuration
BACKEND_API_URL=http://localhost:8001
BACKEND_API_TIMEOUT=30

# Security
SECRET_KEY=your_secret_key_for_jwt_here
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_here

# Environment
ENVIRONMENT=development  # development, staging, production

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# LGPD Compliance
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true
